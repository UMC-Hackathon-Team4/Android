<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <!-- 제목 -->
    <TextView
        android:id="@+id/title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="작품 관리"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 부제목 -->
    <TextView
        android:id="@+id/subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="작품을 공개하는 데 필요한 내용을 작성해주세요"
        android:textSize="12sp"
        android:textColor="#666666"
        android:layout_marginTop="8dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/title_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 카드 1: 작품 정보 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_work_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:cardElevation="2dp"
        app:cardCornerRadius="4dp"
        app:layout_constraintTop_toBottomOf="@id/subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_check"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="작품 정보"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginStart="12dp"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_down"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 카드 2: 스토리 작성 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_story"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:cardElevation="2dp"
        app:cardCornerRadius="4dp"
        app:layout_constraintTop_toBottomOf="@id/card_work_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_check"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="스토리 작성"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginStart="12dp"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_down"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 카드 3: 리워드 설계 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_reward"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:cardElevation="2dp"
        app:cardCornerRadius="4dp"
        app:layout_constraintTop_toBottomOf="@id/card_story"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_check"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="리워드 설계"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginStart="12dp"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_down"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 하단 버튼 -->
    <Button
        android:id="@+id/btn_next"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        android:text="함께해요"
        android:enabled="false"
        android:textColor="#FFFFFF"
        android:backgroundTint="#CCCCCC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>