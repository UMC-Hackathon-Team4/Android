<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 스크롤 가능한 콘텐츠 영역 -->
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_next"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/content_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="#FFFFFF">

            <!-- 제목 -->
            <TextView
                android:id="@+id/title_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="작품 관리"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- 부제목 -->
            <TextView
                android:id="@+id/subtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="작품을 공개하는 데 필요한 내용을 작성해주세요"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginTop="8dp"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toBottomOf="@id/title_tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_work_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="4dp"
                app:layout_constraintTop_toBottomOf="@id/subtitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:id="@+id/layout_work_info_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- 상단 줄: 체크 + 제목 + 화살표 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_check" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="작품 정보"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"/>

                    <ImageView
                        android:id="@+id/btn_toggle_info"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_down"/>
                </LinearLayout>

                <!-- ▼ 토글로 보였다 숨겼다 할 영역 ▼ -->
                <LinearLayout
                    android:id="@+id/work_info_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:paddingTop="16dp">

                    <!-- 카테고리 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="카테고리"
                        android:textStyle="bold"/>

                    <Spinner
                        android:id="@+id/category_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp" />

                    <!-- 목표 금액 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="목표가격"
                        android:textStyle="bold"
                        android:layout_marginTop="16dp"/>

                    <EditText
                        android:id="@+id/goal_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="작품 진행에 필요한 최소 금액을 입력해 주세요"
                        android:inputType="number"
                        android:layout_marginTop="4dp"/>

                    <!-- 기간 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="기간"
                        android:textStyle="bold"
                        android:layout_marginTop="16dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="사람들이 ‘함께하기’를 할 수 있는 기간이에요.\n너무 짧거나 너무 길지 않게 설정해보세요."
                        android:textSize="12sp"
                        android:textColor="#777777"
                        android:layout_marginTop="4dp"/>

                    <EditText
                        android:id="@+id/start_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="시작일"
                        android:focusable="false"
                        android:layout_marginTop="8dp"/>

                    <EditText
                        android:id="@+id/end_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="종료일"
                        android:focusable="false"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

            <!-- 카드 2: 스토리 작성 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_story"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="4dp"
                app:layout_constraintTop_toBottomOf="@id/card_work_info"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_check"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="스토리 작성"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"/>

                    <ImageView
                        android:id="@+id/btn_toggle_story"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_down"/>

                </LinearLayout>

                <!-- ▼ 스토리 입력 확장 영역 -->
                <LinearLayout
                    android:id="@+id/story_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:paddingTop="16dp">

                    <!-- 작품 제목 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="작품 제목"
                        android:textStyle="bold"/>

                    <EditText
                        android:id="@+id/story_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="제목을 입력해 주세요"
                        android:maxLength="50"
                        android:layout_marginTop="4dp"/>

                    <!-- 대표 이미지 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="대표이미지"
                        android:textStyle="bold"
                        android:layout_marginTop="16dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="작품 설명, SNS 광고 등에 노출할 대표 이미지를 등록해주세요"
                        android:textSize="12sp"
                        android:textColor="#777777"
                        android:layout_marginBottom="8dp"/>


                    <!-- 작품 소개 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="작품 소개"
                        android:textStyle="bold"
                        android:layout_marginTop="16dp"/>

                    <EditText
                        android:id="@+id/story_intro"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:hint="작품을 쉽게 소개해주세요"
                        android:gravity="top"
                        android:maxLength="100"
                        android:inputType="textMultiLine"/>

                    <!-- 작품 이야기 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="작품 이야기"
                        android:textStyle="bold"
                        android:layout_marginTop="16dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="이 작품을 만들게 된 이야기나, 담긴 마음을 자유롭게 나눠주세요."
                        android:textSize="12sp"
                        android:textColor="#777777"
                        android:layout_marginBottom="4dp"/>

                    <EditText
                        android:id="@+id/story_detail_input"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:hint="내용 입력"
                        android:gravity="top"
                        android:maxLength="100"
                        android:inputType="textMultiLine"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

            <!-- 카드 3: 리워드 설계 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_reward"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="4dp"
                app:layout_constraintTop_toBottomOf="@id/card_story"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">


                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_check"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="리워드 설계"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"/>

                    <ImageView
                        android:id="@+id/btn_toggle_reward"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_down"/>
                </LinearLayout>

                <!-- ▼ 리워드 입력 확장 영역 -->
                <LinearLayout
                    android:id="@+id/reward_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:paddingTop="16dp">

                    <!-- 카드형 배경 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/bg_reward_box"
                        android:padding="16dp">

                        <!-- 가격 -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="가격"
                            android:textStyle="bold"/>

                        <EditText
                            android:id="@+id/reward_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="가격을 입력하세요"
                            android:inputType="number"
                            android:layout_marginTop="4dp"/>

                        <!-- 리워드 이름 -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="리워드 이름"
                            android:textStyle="bold"
                            android:layout_marginTop="12dp"/>

                        <EditText
                            android:id="@+id/reward_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="예시) [응원 펀딩] 감사카드 + 작가 엽서 1종"
                            android:maxLength="30"
                            android:layout_marginTop="4dp"/>

                        <!-- 리워드 설명 -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="리워드 설명"
                            android:textStyle="bold"
                            android:layout_marginTop="12dp"/>

                        <EditText
                            android:id="@+id/reward_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="리워드 구성과 혜택을 간결하게 설명해 주세요"
                            android:maxLength="100"
                            android:inputType="textMultiLine"
                            android:gravity="top"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <!-- 저장 버튼 -->
                    <Button
                        android:id="@+id/btn_save_reward"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="12dp"
                        android:text="저장"
                        android:enabled="false"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#CCCCCC" />
                    </LinearLayout>
            </LinearLayout>

            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- 고정된 하단 버튼 -->
    <Button
        android:id="@+id/btn_next"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="함께해요"
        android:textColor="#FFFFFF"
        android:enabled="false"
        android:backgroundTint="#CCCCCC"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>