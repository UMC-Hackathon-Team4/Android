<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 카드 2: 이야기 작성 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardUseCompatPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="82dp"
                android:background="@drawable/bg_card_border"
                android:orientation="horizontal"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_check_blue" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:text="이야기 작성"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 작품 제목 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="작품제목"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginTop="40dp"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/et_title"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_card_border_rect"
            android:hint="제목을 입력해주세요."
            android:maxLength="50"
            android:padding="12dp"
            android:textSize="10sp"
            android:layout_marginStart="25dp" />


        <!-- 대표 이미지 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="대표 이미지"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginTop="40dp"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="작품 설명, SNS 광고 등에 노출할 대표 이미지를 등록해주세요."
            android:textColor="#999999"
            android:textSize="10sp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="25dp" />

        <!-- 1. 대표 이미지 업로드 버튼 -->
        <ImageView
            android:id="@+id/iv_cover_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="25dp"
            android:background="@drawable/bg_card_border_rect"
            android:scaleType="centerInside"
            android:src="@drawable/ic_camera" />




        <!-- 작품 소개 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="작품 소개"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginTop="40dp"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="소개 사진과 함께 보이는 글이에요.\n작품을 쉽고 간결하게 소개해 주세요."
            android:textColor="#999999"
            android:layout_marginStart="25dp"
            android:textSize="10sp"/>

        <!-- 2. 작품 소개 섹션의 이미지 업로드 3개 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginStart="27dp">

            <ImageView
                android:id="@+id/iv_intro_image1"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_card_border_rect"
                android:scaleType="centerInside"
                android:src="@drawable/ic_camera" />

            <ImageView
                android:id="@+id/iv_intro_image2"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_card_border_rect"
                android:scaleType="centerInside"
                android:src="@drawable/ic_camera" />

            <ImageView
                android:id="@+id/iv_intro_image3"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:background="@drawable/bg_card_border_rect"
                android:scaleType="centerInside"
                android:src="@drawable/ic_camera" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="280dp"
            android:layout_height="120dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="25dp"
            android:background="@drawable/bg_card_border_rect">

            <EditText
                android:id="@+id/et_intro"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="내용을 입력해주세요."
                android:gravity="top|start"
                android:padding="12dp"
                android:background="@android:color/transparent"
                android:maxLength="100"
                android:textSize="10sp"/>


        </RelativeLayout>


        <!-- 작품 이야기 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="작품 이야기"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginTop="40dp"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이 작품을 만들게 된 이유나, 담긴 마음을 자유롭게 나눠주세요."
            android:textColor="#999999"
            android:layout_marginStart="25dp"
            android:textSize="10sp"/>

        <EditText
            android:id="@+id/et_story"
            android:layout_width="280dp"
            android:layout_height="120dp"
            android:background="@drawable/bg_card_border_rect"
            android:hint="내용을 입력해주세요."
            android:maxLength="100"
            android:gravity="top|start"
            android:padding="12dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:textSize="10sp"/>


        <!-- 작품 요약 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="작품요약"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginTop="40dp"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이 작품이 어떤 것인지 짧게 소개해주세요.\n첫인상을 결정짓는 소중한 한 줄입니다!"
            android:textColor="#999999"
            android:layout_marginStart="25dp"
            android:layout_marginTop="4dp"
            android:textSize="10sp"/>

        <EditText
            android:id="@+id/et_summary"
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_card_border_rect"
            android:hint="내용을 입력해주세요."
            android:maxLength="50"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="25dp"
            android:textSize="10sp"/>



        <!-- 다음 버튼 -->
        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="다음"
            android:layout_marginTop="32dp"
            android:textColor="@android:color/white"
            android:backgroundTint="#699DE5"
            android:background="@drawable/bg_rounded_border"/>
    </LinearLayout>
</ScrollView>